@model IEnumerable<HotelManagement.Entities.Reciepts.Reciept>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Book new room", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Guest.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StayedFromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StayedToDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Guest.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StayedFromDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StayedToDate.Date)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            @{

                if (item.StayedFromDate.Date >= DateTime.Now.Date.AddDays(2))
                {
                    
                  @Html.ActionLink("| Edit", "Edit", new { id = item.Id }) 

                }
            }

        </td>
    </tr>
}

</table>
